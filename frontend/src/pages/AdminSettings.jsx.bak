          <p className="text-sm text-gray-500 mb-4">
            Automatically clear all teller-supervisor assignments daily at a specified time. 
            This allows supervisors to be reassigned flexibly each day.
          </p>

          <div className="space-y-4">
            {/* Enable/Disable Toggle */}
            <div className="flex items-center gap-3">
              <input
                type="checkbox"
                id="autoResetSupervisorAssignments"
                checked={autoResetSupervisorAssignments}
                onChange={(e) => setAutoResetSupervisorAssignments(e.target.checked)}
                className="w-5 h-5 text-indigo-600 rounded focus:ring-indigo-500"
              />
              <label htmlFor="autoResetSupervisorAssignments" className="text-sm font-medium">
                Enable automatic daily reset
              </label>
            </div>

            {/* Time Picker */}
            <div className="flex items-center gap-3">
              <label className="text-sm font-medium">Reset Time:</label>
              <input
                type="time"
                value={supervisorResetTime}
                onChange={(e) => setSupervisorResetTime(e.target.value)}
                disabled={!autoResetSupervisorAssignments}
                className="p-2 border rounded dark:bg-gray-700 dark:border-gray-600 disabled:opacity-50 disabled:cursor-not-allowed"
              />
              <button
                onClick={saveSupervisorResetSettings}
                disabled={supervisorResetSaving}
                className="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:opacity-90 disabled:opacity-50"
              >
                {supervisorResetSaving ? "Saving..." : "Save Settings"}
              </button>
            </div>

            {/* Manual Reset Button */}
            <div className="pt-3 border-t dark:border-gray-700">
              <button
                onClick={manualResetSupervisorAssignments}
                disabled={manualResetting}
                className="px-4 py-2 bg-amber-600 text-white rounded-lg hover:opacity-90 disabled:opacity-50 flex items-center gap-2"
              >
                <RefreshCw className={`w-4 h-4 ${manualResetting ? 'animate-spin' : ''}`} />
                {manualResetting ? "Resetting..." : "Reset All Assignments Now"}
              </button>
              <p className="text-xs text-gray-500 mt-2">
                Manually clear all teller-supervisor assignments immediately
              </p>
            </div>
          </div>
        </div>
      )}

      {/* üìä Multiple Reports Per Day Setting - ADMIN ONLY */}
      {isAdmin && (
        <div className="p-4 bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
          <h2 className="font-semibold text-lg mb-3">üìä Teller Report Frequency</h2>
          <p className="text-sm text-gray-500 mb-4">
            Control whether tellers can submit multiple reports per day or are limited to one report per day.
          </p>

          <div className="space-y-4">
            {/* Enable/Disable Toggle */}
            <div className="flex items-center gap-3">
              <input
                type="checkbox"
                id="allowMultipleReportsPerDay"
                checked={allowMultipleReportsPerDay}
                onChange={(e) => setAllowMultipleReportsPerDay(e.target.checked)}
                className="w-5 h-5 text-indigo-600 rounded focus:ring-indigo-500"
              />
              <label htmlFor="allowMultipleReportsPerDay" className="text-sm font-medium">
                Allow tellers to submit multiple reports per day
              </label>
            </div>

            {/* Save Button */}
            <div className="flex items-center gap-3">
              <button
                onClick={saveMultipleReportsSetting}
                disabled={multipleReportsSaving}
                className="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:opacity-90 disabled:opacity-50"
              >
                {multipleReportsSaving ? "Saving..." : "Save Setting"}
              </button>
              <span className="text-sm text-gray-500">
                Current: {allowMultipleReportsPerDay ? "Multiple reports allowed" : "One report per day"}
              </span>
            </div>
          </div>
        </div>
      )}

      {/* üîÑ Transaction Reset/Override - ADMIN ONLY */}
      {isAdmin && (
        <div className="p-4 bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
          <h2 className="font-semibold text-lg mb-3 flex items-center gap-2">
            <RefreshCw className="w-5 h-5" />
            Transaction Reset/Override
          </h2>
          <div className="flex items-center gap-2 p-3 mb-3 bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-700 rounded-lg">
            <AlertTriangle className="w-5 h-5 text-amber-600 dark:text-amber-400 flex-shrink-0" />
            <p className="text-sm text-amber-800 dark:text-amber-200">
              Warning: This will permanently delete all capital and transaction records for the selected teller.
            </p>
          </div>
          <div className="flex items-center gap-3">
            <select
              value={selectedTeller}
              onChange={(e) => setSelectedTeller(e.target.value)}
              className="flex-1 p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
            >
              <option value="">-- Select Teller to Reset --</option>
              {tellers.map((t) => (
                <option key={t._id} value={t._id}>
                  {t.name || t.username}
                </option>
              ))}
            </select>
            <button
              onClick={resetTellerTransactions}
              disabled={!selectedTeller || resetting}
              className="flex items-center gap-2 px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 disabled:opacity-50 disabled:cursor-not-allowed"
            >
              <Trash2 className="w-4 h-4" />
              {resetting ? "Resetting..." : "Reset Transactions"}
            </button>
          </div>
        </div>
      )}

      {/* ÔøΩ Override/Backfill Teller Report - ADMIN ONLY */}
      {isAdmin && (
        <div className="p-4 bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
          <h2 className="font-semibold text-lg mb-3 flex items-center gap-2">
            <Edit3 className="w-5 h-5" />
            Override/Backfill Teller Report
          </h2>
          <div className="flex items-center gap-2 p-3 mb-3 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-700 rounded-lg">
            <AlertTriangle className="w-5 h-5 text-blue-600 dark:text-blue-400 flex-shrink-0" />
            <p className="text-sm text-blue-800 dark:text-blue-200">
              Manually set or override teller report values for any date. This will create or update the report for the selected day.
            </p>
          </div>
          
          <div className="space-y-3">
            <div className="grid md:grid-cols-3 gap-3">
              <div>
                <label className="block mb-1 text-sm font-medium">Select Teller</label>
                <select
                  value={selectedTellerReport}
                  onChange={(e) => setSelectedTellerReport(e.target.value)}
                  className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
                >
                  <option value="">-- Select Teller --</option>
                  {tellersForReport.map((t) => (
                    <option key={t._id} value={t._id}>
                      {t.name || t.username}
                    </option>
                  ))}
                </select>
              </div>
              
              <div>
                <label className="block mb-1 text-sm font-medium">Select Supervisor</label>
                <select
                  value={selectedSupervisorReport}
                  onChange={(e) => setSelectedSupervisorReport(e.target.value)}
                  className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
                >
                  <option value="">-- Select Supervisor --</option>
                  {supervisorsForReport.map((s) => (
                    <option key={s._id} value={s._id}>
                      {s.name || s.username}
                    </option>
                  ))}
                </select>
              </div>
              <div>
                <label className="block mb-1 text-sm font-medium">Report Date</label>
                <input
                  type="date"
                  value={overrideDate}
                  onChange={(e) => setOverrideDate(e.target.value)}
                  className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
                />
              </div>
            </div>

            {selectedTellerReport && selectedSupervisorReport && (
              <div className="grid md:grid-cols-2 gap-3">
                <div>
                  <label className="block mb-1 text-sm font-medium">System Balance</label>
                  <input
                    type="number"
                    step="0.01"
                    value={reportOverride.systemBalance}
                    onChange={(e) => {
                      const systemBalance = e.target.value;
                      const cashOnHand = reportOverride.cashOnHand;
                      
                      // Auto-calculate short/over when both values exist
                      if (systemBalance && cashOnHand) {
                        const diff = parseFloat(cashOnHand) - parseFloat(systemBalance);
                        if (diff < 0) {
                          // Negative = Short
                          setReportOverride({
                            ...reportOverride, 
                            systemBalance,
                            short: Math.abs(diff).toFixed(2),
                            over: "0"
                          });
                        } else if (diff > 0) {
                          // Positive = Over
                          setReportOverride({
                            ...reportOverride, 
                            systemBalance,
                            short: "0",
                            over: diff.toFixed(2)
                          });
                        } else {
                          // Equal = No short/over
                          setReportOverride({
                            ...reportOverride, 
                            systemBalance,
                            short: "0",
                            over: "0"
                          });
                        }
                      } else {
                        setReportOverride({...reportOverride, systemBalance});
                      }
                    }}
                    placeholder="0.00"
                    className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
                  />
                </div>
                <div>
                  <label className="block mb-1 text-sm font-medium">Cash on Hand</label>
                  <input
                    type="number"
                    step="0.01"
                    value={reportOverride.cashOnHand}
                    onChange={(e) => {
                      const cashOnHand = e.target.value;
                      const systemBalance = reportOverride.systemBalance;
                      
                      // Auto-calculate short/over when both values exist
                      if (systemBalance && cashOnHand) {
                        const diff = parseFloat(cashOnHand) - parseFloat(systemBalance);
                        if (diff < 0) {
                          // Negative = Short
                          setReportOverride({
                            ...reportOverride, 
                            cashOnHand,
                            short: Math.abs(diff).toFixed(2),
                            over: "0"
                          });
                        } else if (diff > 0) {
                          // Positive = Over
                          setReportOverride({
                            ...reportOverride, 
                            cashOnHand,
                            short: "0",
                            over: diff.toFixed(2)
                          });
                        } else {
                          // Equal = No short/over
                          setReportOverride({
                            ...reportOverride, 
                            cashOnHand,
                            short: "0",
                            over: "0"
                          });
                        }
                      } else {
                        setReportOverride({...reportOverride, cashOnHand});
                      }
                    }}
                    placeholder="0.00"
                    className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
                  />
                </div>
                <div>
                  <label className="block mb-1 text-sm font-medium">Short (Auto-calculated)</label>
                  <input
                    type="number"
                    step="0.01"
                    value={reportOverride.short}
                    readOnly
                    placeholder="0.00"
                    className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600 bg-gray-50 dark:bg-gray-900 cursor-not-allowed"
                  />
                </div>
                <div>
                  <label className="block mb-1 text-sm font-medium">Over (Auto-calculated)</label>
                  <input
                    type="number"
                    step="0.01"
                    value={reportOverride.over}
                    readOnly
                    placeholder="0.00"
                    className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600 bg-gray-50 dark:bg-gray-900 cursor-not-allowed"
                  />
                </div>
              </div>
            )}

            <button
              onClick={overrideTellerReport}
              disabled={!selectedTellerReport || overriding}
              className="flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed"
            >
              <Edit3 className="w-4 h-4" />
              {overriding ? "Overriding..." : "Override Report"}
            </button>
          </div>
        </div>
      )}

      {/* ÔøΩüîë Change User Password - ADMIN ONLY */}
      {isAdmin && (
        <div className="p-4 bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
          <h2 className="font-semibold text-lg mb-3 flex items-center gap-2">
            <Key className="w-5 h-5" />
            Change User Password
          </h2>
          <p className="text-sm text-gray-500 dark:text-gray-400 mb-3">
            Change password for any user (admin, supervisor, or teller)
          </p>
          <div className="grid md:grid-cols-3 gap-3 items-end">
            <div>
              <label className="block mb-1 text-sm font-medium">Select User</label>
              <select
                value={selectedUser}
                onChange={(e) => setSelectedUser(e.target.value)}
                className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
              >
                <option value="">-- Select User --</option>
                {users.map((u) => (
                  <option key={u._id} value={u._id}>
                    {u.name || u.username} ({u.role})
                  </option>
                ))}
              </select>
            </div>
            <div>
              <label className="block mb-1 text-sm font-medium">New Password</label>
              <input
                type="password"
                value={newPassword}
                onChange={(e) => setNewPassword(e.target.value)}
                placeholder="Enter new password"
                className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
              />
            </div>
            <button
              onClick={changeUserPassword}
              disabled={!selectedUser || !newPassword || changingPassword}
              className="flex items-center justify-center gap-2 px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 disabled:opacity-50 disabled:cursor-not-allowed"
            >
              <Key className="w-4 h-4" />
              {changingPassword ? "Changing..." : "Change Password"}
            </button>
          </div>
        </div>
      )}

      {/* üîë Change Own Password - SUPERVISOR & TELLER ONLY */}
      {!isAdmin && (
        <div className="p-4 bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
          <h2 className="font-semibold text-lg mb-3 flex items-center gap-2">
            <Key className="w-5 h-5" />
            Change My Password
          </h2>
          <p className="text-sm text-gray-500 dark:text-gray-400 mb-4">
            Update your account password
          </p>
          <div className="space-y-3 max-w-md">
            <div>
              <label className="block mb-1 text-sm font-medium">Current Password</label>
              <input
                type="password"
                value={currentPassword}
                onChange={(e) => setCurrentPassword(e.target.value)}
                placeholder="Enter current password"
                className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
              />
            </div>
            <div>
              <label className="block mb-1 text-sm font-medium">New Password</label>
              <input
                type="password"
                value={ownNewPassword}
                onChange={(e) => setOwnNewPassword(e.target.value)}
                placeholder="Enter new password (min 4 chars)"
                className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
              />
            </div>
            <div>
              <label className="block mb-1 text-sm font-medium">Confirm New Password</label>
              <input
                type="password"
                value={confirmPassword}
                onChange={(e) => setConfirmPassword(e.target.value)}
                placeholder="Confirm new password"
                className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
              />
            </div>
            <button
              onClick={changeOwnPassword}
              disabled={!currentPassword || !ownNewPassword || !confirmPassword || changingPassword}
              className="flex items-center justify-center gap-2 px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 disabled:opacity-50 disabled:cursor-not-allowed"
            >
              <Key className="w-4 h-4" />
              {changingPassword ? "Changing..." : "Change Password"}
            </button>
          </div>
        </div>
      )}

      {/* üí∞ Sync Payroll from Reports - ADMIN ONLY */}
      {isAdmin && (
        <div className="admin-section-wrapper">
        {/* üîÅ Backfill / Recalculate Payrolls - SUPER ADMIN ONLY */}
        {isSuperAdmin && (
          <div className="p-4 bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
            <h2 className="font-semibold text-lg mb-3 flex items-center gap-2">
              <History className="w-5 h-5" />
              Backfill / Recalculate Payrolls
            </h2>
            <p className="text-sm text-gray-500 dark:text-gray-400 mb-3">
              Recalculate payroll totals (base + over - short/terms - deduction - withdrawal) over a date range. Use with caution ‚Äî changes are applied in-place.
            </p>

            <div className="grid md:grid-cols-3 gap-3 items-end">
              <div>
                <label className="text-sm font-medium block mb-1">Start date</label>
                <input type="date" value={backfillStartDate} onChange={(e) => setBackfillStartDate(e.target.value)} className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600" />
              </div>
              <div>
                <label className="text-sm font-medium block mb-1">End date</label>
                <input type="date" value={backfillEndDate} onChange={(e) => setBackfillEndDate(e.target.value)} className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600" />
              </div>

              <div className="flex items-center gap-2">
                <button onClick={runBackfillRecalculate} disabled={backfillRunning} className="px-4 py-2 bg-rose-600 text-white rounded-lg hover:opacity-90 disabled:opacity-50 flex items-center gap-2">
                  {backfillRunning ? (<><RefreshCw className="w-4 h-4 animate-spin"/> Running...</>) : (<><RefreshCw className="w-4 h-4"/> Run Backfill</>)}
                </button>
                <button onClick={() => { setBackfillLogs([]); setBackfillResult(null); }} className="px-3 py-2 border rounded text-sm">Clear</button>
              </div>
            </div>

            <div className="mt-4">
              <label className="block text-xs mb-1">Progress / Logs</label>
              <textarea readOnly value={(backfillLogs || []).join('\n')} rows={6} className="w-full p-2 border rounded bg-gray-50 dark:bg-gray-900 text-xs" />
              {backfillResult && (
                <div className="mt-3 text-sm text-green-700 dark:text-green-300">
                  ‚úÖ Processed: {backfillResult.processed || 0} ‚Äî Errors: {(backfillResult.errors && backfillResult.errors.length) || 0}
                </div>
              )}
            </div>
          </div>
        )}
        
        <div className="p-4 bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
          <h2 className="font-semibold text-lg mb-3 flex items-center gap-2">
            <DollarSign className="w-5 h-5" />
            Sync Payroll from Teller Reports
          </h2>
          <p className="text-sm text-gray-500 dark:text-gray-400 mb-4">
            Automatically calculate and update teller payrolls based on their reports. 
            This will aggregate "over" amounts as bonuses and "short" amounts as deductions.
          </p>
          <button
            onClick={syncAllTellerPayrolls}
            disabled={syncingPayroll}
            className="flex items-center gap-2 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 disabled:opacity-50 disabled:cursor-not-allowed"
          >
            <RefreshCw className={`w-4 h-4 ${syncingPayroll ? 'animate-spin' : ''}`} />
            {syncingPayroll ? "Syncing..." : "Sync All Teller Payrolls"}
          </button>
        </div>
      )}

      {isAdmin && (
        <button
          onClick={saveAll}
          disabled={saving}
          className="bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2 rounded-md shadow"
        >
          {saving ? "üíæ Saving..." : "‚úÖ Save Settings"}
        </button>
      )}
    </div>
  );
}

function ColorInput({ label, value, onChange }) {
  return (
    <div>
      <label className="block mb-1 font-medium">{label}</label>
      <input
        type="color"
        value={value}
        onChange={(e) => onChange(e.target.value)}
        className="w-16 h-8 p-1 border rounded cursor-pointer"
      />
    </div>
  );
}
