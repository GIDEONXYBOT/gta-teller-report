import React, { useContext, useState, useEffect } from "react";
import { SettingsContext } from "../context/SettingsContext.jsx";
import axios from "axios";
import { Trash2, RefreshCw, Key, AlertTriangle, Edit3, DollarSign, History } from "lucide-react";
import { API_URL } from "../utils/apiConfig.js";

const API = API_URL;

export default function AdminSettings() {
  const { settings, updateSettings, loading, user, userTheme, updateUserTheme, setUser } = useContext(SettingsContext);
  const [saving, setSaving] = useState(false);

  // Check if user is admin
  const isAdmin = user?.role === 'admin' || user?.role === 'super_admin';

  // Local theme state (for both system and user themes)
  const [localTheme, setLocalTheme] = useState(null);

  // Initialize local theme from user theme or system theme
  useEffect(() => {
    if (userTheme) {
      setLocalTheme(userTheme);
    } else if (user?.theme) {
      setLocalTheme(user.theme);
    } else if (settings?.theme) {
      setLocalTheme(settings.theme);
    }
  }, [userTheme, user, settings]);

  // new: reset time state
  const [resetTime, setResetTime] = useState("04:00");
  const [resetSaving, setResetSaving] = useState(false);

  // Supervisor reset states
  const [supervisorResetTime, setSupervisorResetTime] = useState("02:00");
  const [autoResetSupervisorAssignments, setAutoResetSupervisorAssignments] = useState(false);
  const [supervisorResetSaving, setSupervisorResetSaving] = useState(false);
  const [manualResetting, setManualResetting] = useState(false);

  // Multiple reports per day setting
  const [allowMultipleReportsPerDay, setAllowMultipleReportsPerDay] = useState(false);
  const [multipleReportsSaving, setMultipleReportsSaving] = useState(false);

  // üîÅ Backfill payroll recalc (super_admin only)
  const isSuperAdmin = user?.role === 'super_admin';
  const [backfillStartDate, setBackfillStartDate] = useState("");
  const [backfillEndDate, setBackfillEndDate] = useState("");
  const [backfillRunning, setBackfillRunning] = useState(false);
  const [backfillResult, setBackfillResult] = useState(null);
  const [backfillLogs, setBackfillLogs] = useState([]);


  // Transaction reset states
  const [tellers, setTellers] = useState([]);
  const [selectedTeller, setSelectedTeller] = useState("");
  const [resetting, setResetting] = useState(false);

  // Change password states
  const [users, setUsers] = useState([]);
  const [selectedUser, setSelectedUser] = useState("");
  const [newPassword, setNewPassword] = useState("");
  const [changingPassword, setChangingPassword] = useState(false);
  
  // Own password change (for non-admin users)
  const [currentPassword, setCurrentPassword] = useState("");
  const [ownNewPassword, setOwnNewPassword] = useState("");
  const [confirmPassword, setConfirmPassword] = useState("");

  // User profile editing states (for all users)
  const [editingProfile, setEditingProfile] = useState(false);
  const [profileName, setProfileName] = useState(user?.name || "");
  const [profileUsername, setProfileUsername] = useState(user?.username || "");
  const [savingProfile, setSavingProfile] = useState(false);

  // Teller report override states
  const [tellersForReport, setTellersForReport] = useState([]);
  const [supervisorsForReport, setSupervisorsForReport] = useState([]);
  const [selectedTellerReport, setSelectedTellerReport] = useState("");
  const [selectedSupervisorReport, setSelectedSupervisorReport] = useState("");
  const [reportOverride, setReportOverride] = useState({
    systemBalance: "",
    cashOnHand: "",
    short: "",
    over: ""
  });
  const [overrideDate, setOverrideDate] = useState(new Date().toISOString().split('T')[0]);
  const [overriding, setOverriding] = useState(false);

  // Payroll sync state
  const [syncingPayroll, setSyncingPayroll] = useState(false);

  useEffect(() => {
    // load current reset time from backend
    let mounted = true;
    (async () => {
      try {
        const res = await axios.get(`${API}/api/scheduler`);
        if (mounted && res.data?.resetTime) {
          const valid = /^\d{1,2}:\d{2}/.test(res.data.resetTime)
            ? res.data.resetTime.slice(0, 5)
            : "04:00";
          setResetTime(valid);
        }
      } catch (err) {
        console.warn("‚ö†Ô∏è Failed to load scheduler time:", err);
      }
    })();

    // Load supervisor reset settings
    (async () => {
      try {
        const res = await axios.get(`${API}/api/system-settings`);
        if (mounted && res.data) {
          setSupervisorResetTime(res.data.supervisorResetTime || "02:00");
          setAutoResetSupervisorAssignments(res.data.autoResetSupervisorAssignments || false);
          setAllowMultipleReportsPerDay(res.data.allowMultipleReportsPerDay || false);
        }
      } catch (err) {
        console.warn("‚ö†Ô∏è Failed to load supervisor reset settings:", err);
      }
    })();

    // Load tellers for transaction reset (admin only)
    if (isAdmin) {
      (async () => {
        try {
          const res = await axios.get(`${API}/api/admin/users`);
          const tellerList = (res.data || []).filter(u => u.role === 'teller');
          if (mounted) setTellers(tellerList);
        } catch (err) {
          console.warn("‚ö†Ô∏è Failed to load tellers:", err);
        }
      })();

      // Load all users for password change (admin only)
      (async () => {
        try {
          const res = await axios.get(`${API}/api/admin/users`);
          if (mounted) setUsers(res.data || []);
        } catch (err) {
          console.warn("‚ö†Ô∏è Failed to load users:", err);
        }
      })();

      // Load tellers for report override (admin only)
      (async () => {
        try {
          const res = await axios.get(`${API}/api/admin/users`);
          const tellerList = (res.data || []).filter(u => u.role === 'teller');
          if (mounted) setTellersForReport(tellerList);
        } catch (err) {
          console.warn("‚ö†Ô∏è Failed to load tellers for report:", err);
        }
      })();

      // Load supervisors for report override (admin only)
      (async () => {
        try {
          const res = await axios.get(`${API}/api/admin/users`);
          const supervisorList = (res.data || []).filter(u => u.role === 'supervisor');
          if (mounted) setSupervisorsForReport(supervisorList);
        } catch (err) {
          console.warn("‚ö†Ô∏è Failed to load supervisors for report:", err);
        }
      })();
    }

    return () => (mounted = false);
  }, []);

  if (loading || !settings)
    return (
      <div className="p-6 text-gray-700 dark:text-gray-200">
        ‚è≥ Loading system settings...
      </div>
    );

  const handleBaseSalaryChange = (role, value) => {
    updateSettings({
      ...settings,
      baseSalary: { ...settings.baseSalary, [role]: parseInt(value) || 0 },
    });
  };

  const handleThemeChange = (field, value) => {
    const newTheme = { ...localTheme, [field]: value };
    setLocalTheme(newTheme);
    
    if (isAdmin) {
      // Admin updates system theme
      updateSettings({
        ...settings,
        theme: newTheme,
      });
    } else {
      // Non-admin updates their own theme
      updateUserTheme(newTheme);
    }
  };

  const handleModeChange = (mode) => {
    const newTheme = { ...localTheme, mode };
    setLocalTheme(newTheme);
    
    if (isAdmin) {
      // Admin updates system theme
      updateSettings({
        ...settings,
        theme: newTheme,
      });
    } else {
      // Non-admin updates their own theme
      updateUserTheme(newTheme);
    }
  };

  const saveAll = async () => {
    setSaving(true);
    try {
      await updateSettings(settings);
      alert("‚úÖ Settings saved successfully!");
    } catch (err) {
      console.error("‚ùå Failed to save:", err);
      alert("Failed to save settings.");
    } finally {
      setSaving(false);
    }
  };

  // ‚úÖ Improved reset time save with validation
  const saveResetTime = async () => {
    setResetSaving(true);
    try {
      let formatted = resetTime;

      if (!formatted || formatted.includes("Invalid")) {
        alert("‚ö†Ô∏è Please select a valid reset time first.");
        setResetSaving(false);
        return;
      }

      await axios.put(`${API}/api/scheduler`, { resetTime: formatted });
      alert(`‚úÖ Reset time updated to ${formatted}`);
    } catch (err) {
      console.error("‚ùå Failed to update reset time:", err);
      alert("Failed to update reset time.");
    } finally {
      setResetSaving(false);
    }
  };

  // Save supervisor reset settings
  const saveSupervisorResetSettings = async () => {
    setSupervisorResetSaving(true);
    try {
      await axios.put(`${API}/api/system-settings/supervisor-reset`, {
        supervisorResetTime,
        autoResetSupervisorAssignments
      });
      alert(`‚úÖ Supervisor reset settings updated! ${autoResetSupervisorAssignments ? `Assignments will reset daily at ${supervisorResetTime}` : 'Auto-reset disabled'}`);
    } catch (err) {
      console.error("‚ùå Failed to update supervisor reset settings:", err);
      alert("Failed to update supervisor reset settings.");
    } finally {
      setSupervisorResetSaving(false);
    }
  };

  // Save user profile (name and username)
  const saveProfile = async () => {
    if (!profileName.trim() || !profileUsername.trim()) {
      alert("‚ö†Ô∏è Name and username are required.");
      return;
    }

    setSavingProfile(true);
    try {
      const token = localStorage.getItem("token");
      await axios.put(
        `${API}/api/users/profile`,
        {
          name: profileName.trim(),
          username: profileUsername.trim()
        },
        {
          headers: { Authorization: `Bearer ${token}` }
        }
      );

      // Update local user state in context
      setUser(updatedUser);

      alert("‚úÖ Profile updated successfully!");
      setEditingProfile(false);
    } catch (err) {
      console.error("‚ùå Failed to update profile:", err);
      alert("Failed to update profile: " + (err.response?.data?.message || err.message));
    } finally {
      setSavingProfile(false);
    }
  };

  // Save multiple reports per day setting
  const saveMultipleReportsSetting = async () => {
    setMultipleReportsSaving(true);
    try {
      await axios.put(`${API}/api/system-settings/multiple-reports`, {
        allowMultipleReportsPerDay
      });
      alert(`‚úÖ Multiple reports setting updated! ${allowMultipleReportsPerDay ? 'Tellers can now submit multiple reports per day' : 'Tellers are limited to one report per day'}`);
    } catch (err) {
      console.error("‚ùå Failed to update multiple reports setting:", err);
      alert("Failed to update multiple reports setting.");
    } finally {
      setMultipleReportsSaving(false);
    }
  };

  // Manually trigger supervisor assignment reset
  const manualResetSupervisorAssignments = async () => {
    if (!confirm("‚ö†Ô∏è This will clear all teller-supervisor assignments. Continue?")) {
      return;
    }
    
    setManualResetting(true);
    try {
      await axios.post(`${API}/api/system-settings/supervisor-reset/trigger`);
      alert("‚úÖ All supervisor assignments have been cleared!");
    } catch (err) {
      console.error("‚ùå Failed to reset assignments:", err);
      alert("Failed to reset supervisor assignments.");
    } finally {
      setManualResetting(false);
    }
  };

  // Reset teller transactions
  const resetTellerTransactions = async () => {
    if (!selectedTeller) {
      alert("Please select a teller first");
      return;
    }

    const teller = tellers.find(t => t._id === selectedTeller);
    if (!confirm(`‚ö†Ô∏è Are you sure you want to reset all transactions for ${teller?.name || teller?.username}? This will delete all capital and transaction records for this teller.`)) {
      return;
    }

    setResetting(true);
    try {
      // Delete all capital records for this teller
      await axios.delete(`${API}/api/teller-management/${selectedTeller}/reset-all`);
      alert(`‚úÖ Successfully reset all transactions for ${teller?.name || teller?.username}`);
      setSelectedTeller("");
    } catch (err) {
      console.error("‚ùå Failed to reset transactions:", err);
      alert("Failed to reset transactions: " + (err.response?.data?.error || err.message));
    } finally {
      setResetting(false);
    }
  };

  // Change user password
  const changeUserPassword = async () => {
    if (!selectedUser) {
      alert("Please select a user first");
      return;
    }

    if (!newPassword || newPassword.length < 4) {
      alert("Password must be at least 4 characters long");
      return;
    }

    const user = users.find(u => u._id === selectedUser);
    if (!confirm(`Change password for ${user?.name || user?.username}?`)) {
      return;
    }

    setChangingPassword(true);
    try {
      await axios.put(`${API}/api/admin/users/${selectedUser}/password`, {
        password: newPassword
      });
      alert(`‚úÖ Password changed successfully for ${user?.name || user?.username}`);
      setSelectedUser("");
      setNewPassword("");
    } catch (err) {
      console.error("‚ùå Failed to change password:", err);
      alert("Failed to change password: " + (err.response?.data?.error || err.message));
    } finally {
      setChangingPassword(false);
    }
  };

  // Change own password (for non-admin users)
  const changeOwnPassword = async () => {
    if (!currentPassword || !ownNewPassword || !confirmPassword) {
      alert("Please fill in all password fields");
      return;
    }

    if (ownNewPassword.length < 4) {
      alert("New password must be at least 4 characters long");
      return;
    }

    if (ownNewPassword !== confirmPassword) {
      alert("New passwords do not match");
      return;
    }

    if (!confirm("Change your password?")) {
      return;
    }

    setChangingPassword(true);
    try {
      const token = localStorage.getItem("token");
      await axios.put(
        `${API}/api/admin/users/${user._id}/password`,
        { password: ownNewPassword, currentPassword },
        { headers: { Authorization: `Bearer ${token}` } }
      );
      alert("‚úÖ Password changed successfully");
      setCurrentPassword("");
      setOwnNewPassword("");
      setConfirmPassword("");
    } catch (err) {
      console.error("‚ùå Failed to change password:", err);
      alert("Failed to change password: " + (err.response?.data?.error || err.message));
    } finally {
      setChangingPassword(false);
    }
  };

  // Override or backfill teller report for any date
  const overrideTellerReport = async () => {
    if (!selectedTellerReport) {
      alert("Please select a teller first");
      return;
    }

    if (!selectedSupervisorReport) {
      alert("Please select a supervisor first");
      return;
    }

    if (!overrideDate) {
      alert("Please select a date for the report");
      return;
    }

    const teller = tellersForReport.find(t => t._id === selectedTellerReport);
    const supervisor = supervisorsForReport.find(s => s._id === selectedSupervisorReport);
    
    if (!confirm(`Override/backfill ${overrideDate} report for ${teller?.name || teller?.username} under ${supervisor?.name || supervisor?.username}?`)) {
      return;
    }

    setOverriding(true);
    try {
      const token = localStorage.getItem("token");
      
      await axios.put(
        `${API}/api/teller-reports/${selectedTellerReport}/override`,
        {
          date: overrideDate,
          supervisorId: selectedSupervisorReport,
          supervisorName: supervisor?.name || supervisor?.username,
          systemBalance: parseFloat(reportOverride.systemBalance) || 0,
          cashOnHand: parseFloat(reportOverride.cashOnHand) || 0,
          short: parseFloat(reportOverride.short) || 0,
          over: parseFloat(reportOverride.over) || 0
        },
        { headers: { Authorization: `Bearer ${token}` } }
      );
      
      alert(`‚úÖ Report saved for ${overrideDate} ‚Äì ${teller?.name || teller?.username}`);
      setSelectedTellerReport("");
      setSelectedSupervisorReport("");
      setReportOverride({
        systemBalance: "",
        cashOnHand: "",
        short: "",
        over: ""
      });
      setOverrideDate(new Date().toISOString().split('T')[0]);
    } catch (err) {
      console.error("‚ùå Failed to override report:", err);
      alert("Failed to override report: " + (err.response?.data?.error || err.message));
    } finally {
      setOverriding(false);
    }
  };

  // Sync all teller payrolls from reports
  const syncAllTellerPayrolls = async () => {
    if (!confirm("This will recalculate all teller payrolls based on their reports. Continue?")) {
      return;
    }

    setSyncingPayroll(true);
    try {
      const token = localStorage.getItem("token");
      
      // Get all tellers
      const tellerRes = await axios.get(`${API}/api/admin/users`, {
        headers: { Authorization: `Bearer ${token}` }
      });
      
      const tellers = (tellerRes.data || []).filter(u => u.role === 'teller');
      
      let successCount = 0;
      let failCount = 0;

      // Sync each teller's payroll
      for (const teller of tellers) {
        try {
          await axios.post(
            `${API}/api/payroll/sync-teller-reports`,
            { userId: teller._id },
            { headers: { Authorization: `Bearer ${token}` } }
          );
          successCount++;
        } catch (err) {
          console.error(`Failed to sync payroll for ${teller.name || teller.username}:`, err);
          failCount++;
        }
      }

      alert(`‚úÖ Payroll sync complete!\nSuccess: ${successCount}\nFailed: ${failCount}`);
    } catch (err) {
      console.error("‚ùå Failed to sync payrolls:", err);
      alert("Failed to sync payrolls: " + (err.response?.data?.message || err.message));
    } finally {
      setSyncingPayroll(false);
    }
  };

  // Run server-side backfill/recalculate payroll totals for a date range (super_admin only)
  const runBackfillRecalculate = async () => {
    if (!isSuperAdmin) return alert('Permission denied - super_admin only');
    if (!backfillStartDate || !backfillEndDate) return alert('Please select both start and end dates');

    if (!confirm(`Run payroll recalculation between ${backfillStartDate} ‚Üí ${backfillEndDate}? This will update payroll totals in place.`)) return;

    setBackfillRunning(true);
    setBackfillResult(null);
    setBackfillLogs([]);

    try {
      const token = localStorage.getItem('token');
      setBackfillLogs((logs) => [...logs, `Starting backfill (${backfillStartDate} ‚Üí ${backfillEndDate})...`]);
      const res = await axios.post(`${API}/api/payroll/backfill-recalculate`, {
        startDate: backfillStartDate,
        endDate: backfillEndDate,
      }, { headers: { Authorization: `Bearer ${token}` } });

      setBackfillResult(res.data);
      setBackfillLogs((logs) => [...logs, `‚úÖ Done: ${JSON.stringify(res.data)}`]);
      alert(`Backfill completed: ${res.data.processed || 0} processed`);
    } catch (err) {
      console.error('‚ùå Backfill error:', err);
      const msg = err?.response?.data?.message || err.message || 'Unknown error';
      setBackfillLogs((logs) => [...logs, `‚ùå Error: ${msg}`]);
      alert('Backfill failed: ' + msg);
    } finally {
      setBackfillRunning(false);
    }
  };

  return (
    <div className="p-6 bg-gray-100 dark:bg-blue-950 text-gray-900 dark:text-gray-100 min-h-screen">
      <h1 className="text-2xl font-bold mb-6">‚öôÔ∏è {isAdmin ? 'System Settings' : 'My Settings'}</h1>

      {/* üí∞ Base Salary Configuration - ADMIN ONLY */}
      {isAdmin && (
        <div className="p-4 bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
          <h2 className="font-semibold text-lg mb-3">
            üí∞ Base Salary Configuration
          </h2>
        <div className="grid md:grid-cols-3 gap-4">
          {Object.keys(settings.baseSalary).map((role) => (
            <div key={role}>
              <label className="block capitalize mb-1">{role}</label>
              <input
                type="number"
                value={settings.baseSalary[role]}
                onChange={(e) => handleBaseSalaryChange(role, e.target.value)}
                className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
              />
            </div>
          ))}
        </div>
        </div>
      )}

      {/* üë§ User Profile Settings - FOR ALL USERS */}
      <div className="p-4 bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
        <h2 className="font-semibold text-lg mb-3">üë§ My Profile</h2>
        <p className="text-sm text-gray-500 dark:text-gray-400 mb-3">
          Update your personal information
        </p>

        {!editingProfile ? (
          <div className="space-y-3">
            <div>
              <label className="block text-sm font-medium mb-1">Name</label>
              <div className="p-2 bg-gray-50 dark:bg-gray-700 rounded border">
                {user?.name || "Not set"}
              </div>
            </div>
            <div>
              <label className="block text-sm font-medium mb-1">Username</label>
              <div className="p-2 bg-gray-50 dark:bg-gray-700 rounded border">
                {user?.username}
              </div>
            </div>
            <div>
              <label className="block text-sm font-medium mb-1">Role</label>
              <div className="p-2 bg-gray-50 dark:bg-gray-700 rounded border capitalize">
                {user?.role}
              </div>
            </div>
            <button
              onClick={() => {
                setEditingProfile(true);
                setProfileName(user?.name || "");
                setProfileUsername(user?.username || "");
              }}
              className="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition"
            >
              ‚úèÔ∏è Edit Profile
            </button>
          </div>
        ) : (
          <div className="space-y-3">
            <div>
              <label className="block text-sm font-medium mb-1">Name *</label>
              <input
                type="text"
                value={profileName}
                onChange={(e) => setProfileName(e.target.value)}
                className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
                placeholder="Enter your full name"
                required
              />
            </div>
            <div>
              <label className="block text-sm font-medium mb-1">Username *</label>
              <input
                type="text"
                value={profileUsername}
                onChange={(e) => setProfileUsername(e.target.value)}
                className="w-full p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
                placeholder="Enter your username"
                required
              />
            </div>
            <div className="flex gap-2">
              <button
                onClick={saveProfile}
                disabled={savingProfile}
                className="px-4 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition disabled:opacity-50"
              >
                {savingProfile ? "üíæ Saving..." : "üíæ Save Changes"}
              </button>
              <button
                onClick={() => setEditingProfile(false)}
                className="px-4 py-2 bg-gray-600 text-white rounded hover:bg-gray-700 transition"
              >
                ‚ùå Cancel
              </button>
            </div>
          </div>
        )}
      </div>

      {/* üé® Theme Settings */}
      {localTheme && (
        <div className="p-4 bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
          <h2 className="font-semibold text-lg mb-3">
            üé® {isAdmin ? 'System Theme Settings' : 'My Theme Settings'}
          </h2>
          {!isAdmin && (
            <p className="text-sm text-gray-500 dark:text-gray-400 mb-3">
              Customize your personal theme preferences
            </p>
          )}

          <div className="flex items-center gap-3 mb-4">
            <label className="font-medium">Mode:</label>
            <select
              value={localTheme.mode}
              onChange={(e) => handleModeChange(e.target.value)}
              className="p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
            >
              <option value="light">üåû Light</option>
              <option value="dark">üåô Dark</option>
            </select>
          </div>

          <div className="grid md:grid-cols-2 gap-4">
            <ColorInput
              label="Light Font Color"
              value={localTheme.lightFont}
              onChange={(val) => handleThemeChange("lightFont", val)}
            />
            <ColorInput
              label="Dark Font Color"
              value={localTheme.darkFont}
              onChange={(val) => handleThemeChange("darkFont", val)}
            />
            <ColorInput
              label="Light Background"
              value={localTheme.lightBg}
              onChange={(val) => handleThemeChange("lightBg", val)}
            />
            <ColorInput
              label="Dark Background"
              value={localTheme.darkBg}
              onChange={(val) => handleThemeChange("darkBg", val)}
            />
          </div>
        </div>
      )}

      {/* üïê Daily Reset Time Control - ADMIN ONLY */}
      {isAdmin && (
        <div className="p-4 bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
          <h2 className="font-semibold text-lg mb-3">üïê Daily Reset Time</h2>
          <p className="text-sm text-gray-500 mb-3">
            Choose what time the system performs automatic daily reset
            (Asia/Manila timezone).
          </p>
          <div className="flex items-center gap-3">
            <input
              type="time"
              value={resetTime}
              onChange={(e) => setResetTime(e.target.value)}
              className="p-2 border rounded dark:bg-gray-700 dark:border-gray-600"
            />
            <button
              onClick={saveResetTime}
              disabled={resetSaving}
              className="px-4 py-2 bg-indigo-600 text-white rounded-lg hover:opacity-90"
